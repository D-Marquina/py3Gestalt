#:kivy 1.10.0
#:import hex kivy.utils.get_color_from_hex
#:import ScrollEffect kivy.effects.scroll.ScrollEffect

<Py3GestaltGUI>:
    vm_bt_import: vm_button_import
    vm_bt_search: vm_button_search
    int_sp: int_spinner
    int_bt_connect: int_button_connect
    debugger_lb: debugger_label

    orientation : 'vertical'
    canvas:
        Color:
            rgba: 0.1215, 0.2078, 0.2431, 0.75
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint: (1, 0.1)
        orientation: 'horizontal'

        Label:
            size_hint_x: 0.4
            font_size: 18
            text: 'Select virtual machine file:'

        Button:
            id: vm_button_search
            size_hint_x: 0.2
            text: 'Search file'
            color: (1,1,1,1)
            on_release: root.open_file_browser()

        Button:
            id:vm_button_import
            size_hint_x: 0.3
            text: 'Import virtual machine'
            disabled: True
            on_release: root.import_virtual_machine()

    BoxLayout:
        size_hint: (1, 0.1)
        orientation: 'horizontal'

        Label:
            size_hint_x: 0.4
            font_size: 18
            text: 'Select interface:'

        Spinner:
            id: int_spinner
            size_hint_x: 0.2
            text: '/dev/ttyUSB0'
            color: (1,1,1,1)
            on_release: root.load_ports()

        Button:
            id:int_button_connect
            size_hint_x: 0.3
            text: 'Connect to Machine'
            disabled: True
            on_release: root.connect_to_machine()

    BoxLayout:
        size_hint: (1, 0.1)
        orientation: 'horizontal'

        Button:
            text: 'Check status'

    BoxLayout:
        canvas:
            Color:
                rgba: hex('#2B2B2B')
            Rectangle:
                pos: (self.x, self.y)
                size: self.size

        ScrollView:
            bar_width: 10
            effect_cls: ScrollEffect
            scroll_type: ['bars', 'content']

            Label:
                id: debugger_label
                size_hint_y: None #
                height: self.texture_size[1] #
                text_size: self.width, None
                halign: 'left'
                valign: 'top'
                padding_x: 10
                padding_y: 10
                color: hex('#A9B7C6')
                text: 'Py3Gestalt Tester Version 0.1' + '\n' + '\n'

<VirtualMachineBrowser>:
    BoxLayout:
        orientation: 'vertical'

        FileChooserListView:
            id: fb_file_chooser
            filters: ['*.py']

        BoxLayout:
            size_hint: (0.98, 0.1)
            pos_hint: {'x':0.01}

            Button:
                text: 'Load file'
                on_release: root.select_virtual_machine(fb_file_chooser.path, fb_file_chooser.selection[0])

            Button:
                text: 'Cancel'
                on_release: root.dismiss()

